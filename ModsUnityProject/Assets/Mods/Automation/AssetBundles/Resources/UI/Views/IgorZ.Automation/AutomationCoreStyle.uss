}

.automation-button-undo:hover:enabled {
    background-image: resource('UI/Images/Buttons/IgorZ.Automation/UndoIcon-hover');
}

.automation-button-undo:hover:enabled:active {
    background-image: resource('UI/Images/Buttons/IgorZ.Automation/UndoIcon-active');
}

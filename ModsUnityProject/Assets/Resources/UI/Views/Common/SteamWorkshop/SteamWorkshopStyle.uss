.steam-workshop-upload-panel {
    width: 1100px;
    height: 480px;
}

.steam-workshop-upload-panel__content {
    flex-direction: row;
    flex-shrink: 0;
}

.steam-workshop-upload-panel__content-column {
    padding: 15px;
}

.steam-workshop-upload-panel__left-content {
    flex-grow: 1;
}

.steam-workshop-upload-panel__name-and-visibility {
    flex-direction: row;
    justify-content: space-between;
}

.steam-workshop-upload-panel__name-content {
    width: 50%;
}

.steam-workshop-upload-panel__label {
    -unity-text-align: middle-left;
    color: rgb(204, 204, 204);
    font-size: 13px;
    overflow: hidden;
}

.steam-workshop-upload-panel__name-field {
    height: 28px;
}

.steam-workshop-upload-panel__name-field .unity-text-element {
    -unity-text-align: middle-left;
}

.steam-workshop-upload-panel__visibility-content {
    width: 45%;
}

.steam-workshop-upload-panel__section-header {
    flex-direction: row;
    justify-content: space-between;
    height: 20px;
    margin-bottom: 3px;
}

.steam-workshop-upload-panel__description {
    height: 90px;
}

.steam-workshop-upload-panel__changelog-label {
    height: 20px;
    margin-bottom: 3px;
}

.steam-workshop-upload-panel__margin-bottom {
    margin-bottom: 10px;
}

.steam-workshop-upload-panel__right-content {
    flex-shrink: 0;
}

.steam-workshop-upload-panel__thumbnail {
    --background-image: resource('UI/Images/Backgrounds/bg-3');
    --background-slice-scale: 0.5;
    --background-slice: 9;
    width: 480px;
    height: 270px;
    flex-grow: 0;
    flex-shrink: 0;
    margin: 2px;
}

.steam-workshop-upload-panel__thumbnail-background {
    background-color: black;
}

.steam-workshop-upload-panel__thumbnail-info {
    position: absolute;
    justify-content: center;
    left: 15px;
    right: 15px;
    bottom: 15px;
    top: 15px;
}

.steam-workshop-upload-panel__thumbnail-info-label {
    -unity-text-align: middle-center;
    margin-bottom: 10px;
    margin-left: 15px;
    margin-right: 15px;
}

.steam-workshop-upload-panel__bottom-controls {
    margin-top: 10px;
    align-self: stretch;
    justify-content: center;
    flex-direction: row;
}

.steam-workshop-upload-panel__legal-agreement {
    -unity-text-align: middle-center;
    min-height: 20px;
}

.steam-workshop-upload-panel__upload-as-new-toggle-wrapper {
    flex-direction: row;
    padding-left: 15px;
}

.steam-workshop-upload-panel__upload-as-new-toggle {
    align-self: flex-start;
}

.steam-workshop-upload-panel__spacer {
    width: 50%;
}
